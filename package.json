{
  "name": "mlm-investment-platform",
  "version": "1.0.0",
  "description": "MLM Investment Platform with React frontend and Node.js backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd react-client && npm run dev",
    "install-client": "cd react-client && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd react-client && npm run build"
  },
  "keywords": [
    "mlm",
    "investment",
    "platform",
    "react",
    "nodejs"
  ],
  "author": "Investment Platform",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "dotenv": "^16.0.3",
    "crypto-js": "^4.1.1",
    "body-parser": "^1.20.2"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}